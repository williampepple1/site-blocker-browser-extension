{
  "manifest_version": 3,
  "name": "Site Blocker - Parental Controls",
  "version": "1.0.0",
  "description": "A browser extension for parental controls to block specific websites",
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Site Blocker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 