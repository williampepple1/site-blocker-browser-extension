{
  "manifest_version": 3,
  "name": "Site Blocker - Parental Controls",
  "version": "1.0.0",
  "description": "A browser extension for parental controls to block specific websites",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "declarativeNetRequest",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Site Blocker"
  },
      "icons": {
      "16": "icons/icon-minimal.png",
      "48": "icons/icon-simple.png",
      "128": "icons/icon.png"
    }
} 